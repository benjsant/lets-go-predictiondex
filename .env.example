# PostgreSQL Configuration
POSTGRES_USER=letsgo_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=letsgo_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Development Mode
# Set to false in production
DEV_MODE=true

# API Security (v2.0)
# Enable/disable API key authentication
API_KEY_REQUIRED=true

# API Keys (comma-separated)
# Generate with: python api_pokemon/middleware/security.py
# NEVER commit real keys to git
API_KEYS="GENERATE_YOUR_KEYS_HERE"

# Example:
# API_KEYS="BgQJ2_Ur4uYKBsw6Jf4TI_yfA6u0BFwb4a1YbOSmMVQ,25b-IZRYPY4ZRHdSJtj7x566ekaSDZ-MoPtWHpS8NTo"
