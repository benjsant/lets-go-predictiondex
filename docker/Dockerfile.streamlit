FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
WORKDIR /app

RUN pip install --upgrade pip setuptools wheel

# DÃ©pendances
COPY interface/requirements_streamlit.txt .
RUN pip install --no-cache-dir -r requirements_streamlit.txt

# ðŸ‘‰ COPIE DU CODE STREAMLIT (MANQUAIT)
COPY interface ./interface

ENV PYTHONPATH=/app

EXPOSE 8501

CMD ["streamlit","run","interface/app.py","--server.address=0.0.0.0","--server.port=8501","--server.runOnSave=true"]
